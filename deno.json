{
  "name": "@phughesmcr/en-uk-usa",
  "version": "3.0.0",
  "description": "A library for translating between British (en-GB) and American (en-US) English",
  "author": "P. Hughes",
  "license": "MIT",
  "exports": "./mod.ts",
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  },
  "compilerOptions": {
    "erasableSyntaxOnly": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "lib": ["esnext"],
    "module": "esnext",
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "verbatimModuleSyntax": true
  },
  "fmt": {
    "newLineKind": "lf",
    "indentWidth": 2,
    "lineWidth": 120,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "always",
    "useTabs": false,
    "exclude": ["*/.*", "**/*.md", "LICENSE"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended", "jsr"]
    }
  },
  "tests": {
    "include": ["mod.test.ts"]
  },
  "tasks": {
    "ci": "deno fmt && deno lint && deno check mod.ts"
  }
}
